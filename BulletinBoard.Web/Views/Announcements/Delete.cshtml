@model BulletinBoard.Data.Models.Announcement

@{
    ViewData["Title"] = "Delete Announcement";
}

<h2>Delete Announcement</h2>

<div>
    <h4>Are you sure you want to delete this announcement?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Subcategory</dt>
        <dd class="col-sm-10">@Model.SubCategory</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
        <a asp-action="Index" class="btn btn-sm btn-outline-primary me-1">Cancel</a>
    </form>
</div>